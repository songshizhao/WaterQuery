<Application
    x:Class="WaterQuery.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WaterQuery">




    <Application.Resources>


        <Style TargetType="TextBlock">

            <Setter Property="FontFamily" Value="STXihei"></Setter>
            <Setter Property="FontWeight"  Value="Light"></Setter>
        </Style>

        <Style TargetType="TextBox">

            <Setter Property="Width"  Value="380"></Setter>

        </Style>


       
        <Style TargetType="Button">

            <Setter Property="HorizontalAlignment"  Value="Right"></Setter>
            <Setter Property="Margin"  Value="20"></Setter>

            <Setter Property="Background"  Value="{StaticResource SystemAccentColor}"></Setter>

            <Setter Property="Foreground" Value="White"></Setter>
           
        </Style>




    </Application.Resources>
        
</Application>
